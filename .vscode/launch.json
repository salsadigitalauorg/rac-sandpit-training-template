    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: OpenFisca Test & Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "openfisca_core.scripts.openfisca_command",
            "args": [
                "test",
                "--country-package",
                "openfisca_rules",
                "/app/openfisca-rules/openfisca_rules/tests"
            ],
            "justMyCode": true
        },
        {
            "name": "Python: OpenFisca Run & Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "openfisca_core.scripts.openfisca_command",
            "args": [
                "serve",
                "--bind",
                "--country-package",
                "openfisca_rules",
                "0.0.0.0:8800",
                "--reload"
            ],
            "justMyCode": true
        }
    ]
}